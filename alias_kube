##################################
####### KUBERNETES ALIASES #######
alias k='kubectl'
# Actions:
alias get='kubectl get'
alias delete='kubectl delete'
alias describe='kubectl describe'
alias logs='kubectl logs'
alias enter='kubectl exec -it'
# Get Resources:
alias all='kubectl get all'
alias certs='kubectl get certificates'
alias cm='kubectl get configmap'
alias crd='kubectl get crd'
alias crds='crd'
alias deployments='kubectl get deployments'
alias endpoints='kubectl get endpoints'
alias events='kubectl get events'
alias ingress='kubectl get ingress'
alias job='kubectl get jobs'
alias jobs='job'
alias ns='kubectl get namespaces'
alias nodes='kubectl get nodes -o wide'
alias pods='kubectl get pods'
alias pv='kubectl get pv'
alias pvc='kubectl get pvc'
alias sc='kubectl get sc'
alias secret='kubectl get secrets'
alias secrets='secret'
alias svc='kubectl get svc'
